<body>
<div id="top">
   <div id="wrapper">
      <div id="header">
         <h2>フォトライブラリ</h2>
         <div id="pr">
            <p style="font-size:20px;">こんにちは、<%= link_to current_user.login, {:controller => 'photos',:action => 'index'}%>さん。</p>
         </div>
      </div><!-- header end -->
      <div id="menu">
         <ul>
         <li class="home"><%= link_to 'ホーム',:controller=> :photos, :action => 'index' %></li>
         <li><%= link_to '写真追加', {:controller => :photos, :action => :new}, 
		               		{:remote => true, "data-type" => "html", "data-update" => "main"} %></li>
         <li><%= link_to 'アルバム', {:controller => :albums, :action => :index} %></li>
         <li><%= link_to 'zipでアップロード', {:controller => :ziploads, :action => :new}, 
		               		{:remote => true, "data-type" => "html", "data-update" => "main"} %></li>
         <li><%= link_to 'ログアウト',"logout" %></li>
         </ul>
      </div><!-- menu end -->
      <div id="contents">
         <div id="main">
         <p>
		<% if @album.user_id == current_user.id %>
		<h2>アルバム「<%= @album.title %>」の写真一覧</h2>
		<%= link_to "アルバム「#{@album.title}」に写真を追加", {:controller => :photos, :action => :new, :album_id => @album.id},
		{:remote => true, "data-type" => "html", "data-update" => "main"} %>
		<% else %>
		<h2><%= User.find(@album.user_id).login %>さんのアルバム「<%= @album.title %>」の写真一覧</h2>
		<% end %>

		<p>
		<% for photo in @photos %>
		    <table class="photo">
		        <tr>
		            <td>タイトル:</td>
		            <td><%= photo.title%></td>
		        </tr>
		        <tr>
		            <td colspan="2" align="center">
		                <%=
		                link_to (image_tag url_for({:controller => 'photos', :action => 'get_thumb',:id => photo.id}),
		                                   :alt    => photo.file_name,
		                                   :title  => photo.description,
		                                   :border => 0),
		                        {:controller => 'photos', :action=>'get_photo',:id=>photo.id},:popup => ['new_window_name', 'menubar=no,resizable=yes']
		                %>
		            </td>
		        </tr>
		        <tr>
		            <td colspan="2" class="operation">
		                <%= link_to '詳細', photo %>
		                <% if photo.user_id == current_user.id %>
		                	<%= link_to '削除', photo, :confirm => '削除しますか？', :method => :delete %>
		                <% end %>
		            </td>
		        </tr>
		        <tr>
		            <td class="updated">登録:</td>
		            <td><%= photo.created_at.strftime("%Y/%m/%d %X")%></td>
		        </tr>
		        <tr>
		            <td class="updated">更新:</td>
		            <td><%= photo.updated_at.strftime("%Y/%m/%d %X")%></td>
		        </tr>
		    </table>
		<% end %>
		</p>
		<p>
		<%= will_paginate(@photos, :prev_label=>'前を表示', :next_label => '次を表示') %><br />
		</p>
		</div><!-- main end -->
         <div id="sub">
            <div class="section">
               <h2>ユーザ一覧</h2>
				<ul>
					<% for user_list in @user_list %>
					<li>
						<%= link_to user_list.login,{:controller => :photos, :action => :show_user, :user_id => user_list.id} %>
					</li>
					<% end %>
				</ul>
            </div><!-- section end -->
            <div class="section">
               <h2>最新コメント10件</h2>
				<ul>
					<% for comment in @new_comments %>
					<li>
						<%= link_to "#{comment.comment} by #{User.find(comment.user_id).login}",{:controller => :photos, :action => :show, :id => comment.photo_id} %>
					</li>
					<% end %>
				</ul>
            </div><!-- section end -->
         </div><!-- sub end -->
         <div id="totop">
            <p><a href="#top">ページのトップへ戻る</a></p>
         </div><!-- totop end -->
         <div id="footMenu">
         <ul>
         <li>
         </li>
         </ul>
         </div><!-- footerMenu end -->
      </div><!-- contents end -->
      <div id="footer">
         <address></address>
      </div><!-- footer end -->
   </div><!-- wrapper end -->
</div><!-- top end -->
</body>
